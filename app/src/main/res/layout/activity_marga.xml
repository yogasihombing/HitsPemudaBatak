<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".marga"
    android:orientation="vertical"
    android:background="@drawable/wallpaper1"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MARGA BATAK"
        android:textColor="@color/b"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="70dp"
        android:textSize="28dp"
        android:drawableLeft="@drawable/marga_24dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivmarga"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/marga1"/>
            <TextView
                android:id="@id/jenis"
                android:textColor="@color/c"
                android:layout_below="@+id/ivmarga"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:layout_marginTop="20sp"
                android:text="@string/marga1"
                />

        </RelativeLayout>


    </ScrollView>

</LinearLayout>